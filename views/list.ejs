<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="styles.css" />
  <title>To Do List</title>
</head>

<body>

  <div class="box" id="heading">
    <h1><%= kindOfList %></h1>
    <h1><%= kindOfDay %></h1>
    

  </div>

  <div class="box">
    <% items.forEach(function(item, index){ %>
    <div class="item">
      <input type="checkbox" />
      <p><%= item %></p>
    </div>
    <% }); %>

    <form class="item" action= "<%= postAction %> "  method="post">
      <input name="newItem" type="text" placeholder="Add New To Do" autocomplete="off"/>
      <button type="submit" name="kindOfList" value="<%= kindOfList %>">+</button>
    </form>

  </div>
</body>

</html>